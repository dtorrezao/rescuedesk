@using RescueDesk.ViewModels
@model ConfirmRegistoViewModel
@{
    ViewBag.Title = "Recuperar Senha";
    Layout = "~/Views/Shared/BackOffice/_Login.cshtml";
}

<div class="login-content">
    <div class="login-logo">
        <a href="index.html">
            <img class="align-content" src="/images/logo.png" alt="">
        </a>
    </div>
    <div class="login-form">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            
            <div class="form-group">
                @Html.LabelFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Introduza o seu email..." } })
            </div>
            <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Enviar Email</button>
        }
    </div>
</div>