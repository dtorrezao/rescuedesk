@model IEnumerable<RescueDesk.Models.Utilizador>

@{
    ViewBag.Title = "Utilizadores";
    ViewBag.FAIcon = "fa-users";
    ViewBag.SubTitle = "";
}

<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered" style="font-size:14px">
                        <thead>
                            <tr>
                                <th style="width: 45%">
                                    @Html.DisplayNameFor(model => model.nome)
                                </th>
                                <th style="width: 20%">
                                    @Html.DisplayNameFor(model => model.tipoUtilizador)
                                </th>
                                <th style="width: 35%">
                                    @Html.DisplayNameFor(model => model.email)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var inativoclass = "";
                                if (!item.ativo) { inativoclass = "inactive"; }
                                <tr class="@inativoclass">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tipoUtilizador)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{


}

