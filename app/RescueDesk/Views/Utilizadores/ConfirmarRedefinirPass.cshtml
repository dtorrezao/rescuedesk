@model RescueDesk.ViewModels.ConfirmRegistoViewModel
@{
    ViewBag.Title = "ConfirmarRegisto";
    Layout = "~/Views/Shared/BackOffice/_Login.cshtml";
}
<div class="login-content">
    <div class="login-logo">
        <a href="index.html">
            <img class="align-content" src="/images/logo.png" alt="">
        </a>
    </div>
    <div class="login-form">
        @using (Html.BeginForm())

        {
            @Html.ValidationSummary(true)
            @ViewBag.Mensagem
            @Html.HiddenFor(x => x.Hash)
            <div class="form-group">
                @Html.LabelFor(x => x.Username)
                @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @placeholder = "Insira o Username..." })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password)
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Insira a Password..." })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.ConfirmPassword)
                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Insira a Password..." })
            </div>
            <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Confirmar</button>
        }
    </div>
</div>
