@model RescueDesk.Models.TipoUtilizador

@{
    ViewBag.Title = "Tipo de Utilizador";
    ViewBag.SubTitle = "Editar";
}

<div class="col-lg-12">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.idtipo)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card">
            <div class="card-body card-block">
                <div class="form-group">
                    <label for="@Html.NameFor(x=>x.tipouser)" class=" form-control-label">@Html.DisplayNameFor(model => model.tipouser)</label>
                    @Html.EditorFor(model => model.tipouser, new { htmlAttributes = new { @class = "form-control", @placeholder = "Introduza o nome do departamento..." } })
                    @Html.ValidationMessageFor(model => model.tipouser, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Editar
                </button>
                <a href="@Url.Action("Index")" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i> Voltar
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

