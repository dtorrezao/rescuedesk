@model RescueDesk.Models.Departamento

@{
    Layout = null;
    ViewBag.Title = "Departamento";
    ViewBag.SubTitle = "";
}

<div class="col-lg-12">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.iddept)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card">
            <div class="card-body card-block">
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="@Html.NameFor(model=>model.dept)" class=" form-control-label" style="line-height: 38px">@Html.DisplayNameFor(model => model.dept):</label>
                    </div>
                    <div class="col col-md-10">
                        @Html.EditorFor(model => model.dept, new { htmlAttributes = new { @class = "form-control", @placeholder = "Introduza o nome do departamento..." } })
                        @Html.ValidationMessageFor(model => model.dept, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-floppy-o"></i>&nbsp; Guardar
                </button>
                <a onclick="closeModal()" class="btn btn-danger btn-sm">
                    <i class="fa fa-times"></i>&nbsp;Cancelar
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

