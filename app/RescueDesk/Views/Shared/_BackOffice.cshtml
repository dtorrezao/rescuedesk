<html class="no-js" lang="">

<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>RescueDesk - @ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Title">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="favicon.ico">
    @Styles.Render("~/Content/BackOffice")

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->
</head>

<body>
    <!-- Left Panel -->
    @Html.Partial("BackOffice/_NavBar")
    <!-- /#left-panel -->
    <!-- Left Panel -->
    <!-- Right Panel -->
    <div id="right-panel" class="right-panel">
        <!-- Header-->
        @Html.Partial("BackOffice/_Header")
        <!-- /header -->
        <!-- Header-->
        @Html.Partial("BackOffice/_Breadcrumbs")

        <div class="content mt-3">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>
    </div><!-- /#right-panel -->
    <!-- Right Panel -->
    <!--SCRIPTS-->
    @Scripts.Render("~/bundles/BackOffice")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>
    @RenderSection("scripts", required: false)
    <div id="modal-container" class="modal fade" tabindex="-1" role="dialog">
        <a title="Close" class="modal-close-btn">X</a>"
        <div class="modal-content">
            <div class="modal-body">
                <div id="modal-body"> </div>
            </div>
        </div>
    </div>
    <script>
        jQuery(document).ready(function () {
            jQuery(".standardSelect").chosen({});

        });
    </script>


    <script>
        $(function () {
            $('body').on('click', ".modal-link", function (e) {
                e.preventDefault();
                $(this).attr("data-target", '#modal-container');
                $(this).attr("data-toggle", 'modal');
                $('.modal-backdrop').show();
            });
            $('body').on('click', ".modal-close-btn", function (e) {
                $('#modal-container').modal('hide');
                $(this).removeData('bs.modal');
            });

            $('#modal-container').on('hidden.bs.modal', function () {
                $('.modal-backdrop').hide();
                $(this).removeData('bs.modal');
            })
        });

        function closeModal() {
            $('#modal-container').modal('hide');
        }
    </script>
</body>
</html>