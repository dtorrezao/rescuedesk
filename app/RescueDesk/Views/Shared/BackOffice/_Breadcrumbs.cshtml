@{
    bool temUrlCreate = !string.IsNullOrEmpty((string)ViewBag.AddUrl);
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">
                        @if (temUrlCreate)
                        {
                            <div class="fa-hover"><a href="@ViewBag.AddUrl"><i class="fa fa-plus-circle"></i> Adicionar</a></div>
                        }
                        else
                        {
                            @ViewBag.SubTitle
                        }
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>
