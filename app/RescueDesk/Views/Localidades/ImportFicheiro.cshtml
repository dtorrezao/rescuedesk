@{
    Layout = null;
    ViewBag.Title = "Localidades";
    ViewBag.SubTitle = "Importar Ficheiro CTT";
}

@using (Html.BeginForm(
      actionName: "ImportFicheiro",
      controllerName: "Localidades",
      routeValues: null,
      method: FormMethod.Post,
      htmlAttributes: new { @enctype = "multipart/form-data" }))
{
    if (!string.IsNullOrEmpty((string)ViewBag.SubTitle))
    {
        <div class="modal-header">
            <h5 class="modal-title" id="staticModalLabel">@ViewBag.SubTitle</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="modal-body">
        <div class="row ">
            <div class="col col-md-12" style="margin-right:-32px">
                <input type="file" name="file" id="ficheiro" />
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal"> <i class="fa fa-times"></i>&nbsp;Cancelar</button>
        <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i>&nbsp; Guardar</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}