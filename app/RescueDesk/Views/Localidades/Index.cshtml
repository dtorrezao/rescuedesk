@model IEnumerable<RescueDesk.Models.Localidade>

@{
    ViewBag.Title = "Localidades";
    ViewBag.SubTitle = "Listagem";
}

<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                @*<div class="card-header">
                        <strong class="card-title">Listagem</strong>
                        <div class="fa-hover pull-right"><a href="@Url.Action("Create")"><i class="fa fa-plus-circle"></i> Adicionar</a></div>
                    </div>*@
                <div class="card-body">
                    <div class="row container-fluid">
                        <div class="col-sm-12 ">
                            <div class="fa-hover"><a href="@Url.Action("Create")"><i class="fa fa-plus-circle"></i> Adicionar</a></div>
                        </div>
                    </div>
                    <table id="bootstrap-data-table" class="table table-striped table-bordered" style="font-size:14px">
                        <thead>
                            <tr>
                                <th style="width: 5%;">
                                    @Html.DisplayNameFor(model => model.codpostal)
                                </th>
                                <th style="width: 70%;">
                                    @Html.DisplayNameFor(model => model.nomeLocalidade)
                                </th>
                                <th class="no-sort" style="width: 20%;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.codpostal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nomeLocalidade)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = item.codpostal }) " class="btn btn-link minus-padd"><i class="fa fa-pencil"></i></a>
                                        <a href="@Url.Action("Delete", new { id = item.codpostal }) " class="btn btn-link minus-padd" style="color: #dc3545"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>
</div>

