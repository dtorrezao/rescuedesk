@model IEnumerable<RescueDesk.Models.Cliente>
@{
    ViewBag.Title = "Clientes";
    ViewBag.SubTitle = "Listagem";
}
<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                @*<div class="card-header">
                        <strong class="card-title">Listagem</strong>
                        <div class="fa-hover pull-right"><a href="@Url.Action("Create")"><i class="fa fa-plus-circle"></i> Adicionar</a></div>
                    </div>*@
                <div class="card-body">
                    <div class="row container-fluid">
                        <div class="col-sm-12 ">
                            <div class="fa-hover"><a href="@Url.Action("Create")"><i class="fa fa-plus-circle"></i> Adicionar</a></div>
                        </div>
                    </div>
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.nrcontribuinte)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.morada)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.codpostal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.contacto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.obs)
                                </th>
                                <th  class="no-sort"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nrcontribuinte)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.morada)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.codpostal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.contacto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.obs)
                                    </td>
                                    <td >
                                        <a href="@Url.Action("Edit", new { id = item.nrcontribuinte }) " class="btn btn-link">Editar</a>
                                        @*<a href="@Url.Action("Delete", new { id = item.nrcontribuinte }) " class="btn btn-danger">Eliminar</a>*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>
</div>

@section scripts{


}
